{% extends 'base.html.twig' %}

{% block title %}Ajouter une Participation{% endblock %}

{% block body %}
    <h1 class="mb-4 text-center text-success">Ajouter une Participation</h1>

    <div class="mb-3 text-end">
        <a href="{{ path('participation_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour Ã  la liste
        </a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_label(form.participant, 'Participant', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.participant, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.participant) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.collaboration, 'Collaboration', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.collaboration, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.collaboration) }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
