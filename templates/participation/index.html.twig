{% extends 'base.html.twig' %}

{% block title %}Liste des Participations{% endblock %}

{% block body %}
    <h1 class="mb-4 text-center text-primary">Liste des Participations</h1>

    <div class="mb-4 text-end">
        <a href="{{ path('participation_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Ajouter une Participation
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary text-center">
        <tr>
            <th>Participant</th>
            <th>Collaboration</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr class="align-middle">
                <td>{{ participation.participant.firstName }} {{ participation.participant.lastName }}</td>
                <td>{{ participation.collaboration.name }}</td>
                <td class="text-center">
                    <a href="{{ path('participation_show', {id: participation.id}) }}"
                       class="btn btn-info btn-sm text-white">
                        <i class="bi bi-eye"></i> Voir
                    </a>
                    <a href="{{ path('participation_edit', {id: participation.id}) }}"
                       class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
