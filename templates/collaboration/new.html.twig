{# templates/collaboration/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle collaboration{% endblock %}

{% block body %}
    <h1>Créer une nouvelle collaboration</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.details) }}
    {{ form_row(form.participants) }}
    <button type="submit">Créer</button>
    {{ form_end(form) }}
{% endblock %}
